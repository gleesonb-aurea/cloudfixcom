# CloudFix Next.js Environment Variables
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://cloudfix.com

# Newsletter & Form Webhooks
NEXT_PUBLIC_NEWSLETTER_WEBHOOK=https://automate.billgleeson.com/webhook/cloudfix-website-forms
NEXT_PUBLIC_ASSESSMENT_WEBHOOK_URL=https://automate.billgleeson.com/webhook/cloudfix-website-forms

# reCAPTCHA (for form security)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key-here

# Analytics & Tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# HubSpot Integration (if using)
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your-hubspot-portal-id
NEXT_PUBLIC_HUBSPOT_FORM_ID=your-hubspot-form-id

# Feature Flags
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_ASSESSMENT_FORM=true

# API Configuration
API_BASE_URL=https://api.cloudfix.com
WP_API_URL=https://cloudfix.com/wp-json

# Environment
NODE_ENV=development

